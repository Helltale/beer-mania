# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=beermania_user
POSTGRES_PASSWORD=beermania_password
POSTGRES_DB=beermania_db
POSTGRES_SSLMODE=disable
POSTGRES_MAX_IDLE_CONNS=10
POSTGRES_MAX_OPEN_CONNS=100

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=beermania_user
RABBITMQ_PASSWORD=beermania_password
RABBITMQ_VHOST=/

# MinIO Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_UPLOADS=uploads
MINIO_BUCKET_PROCESSED=processed

# Backend Configuration
BACKEND_PORT=8080
BACKEND_LOG_LEVEL=info
BACKEND_ENV=development

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
BACKEND_API_URL=http://backend:8080
